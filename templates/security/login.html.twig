{% extends 'layout/default/index.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block main %}
    <section class="app-section app-cover">
        <img src="{{ asset('img/cover.png') }}" alt="Pokemory"/>
        <h1>Connectez-vous pour jouer</h1>
    </section>

    <section class="app-section">
        <form class="app-form" method="post">
            <fieldset class="form-fieldset">
                <legend class="form-legend">Saisissez vos identifiants</legend>

                <div class="form-group">
                    <label for="username" class="form-label required">E-mail</label>
                    <input type="email"
                           value="{{ last_username }}"
                           name="_username"
                           id="username"
                           class="form-control"
                           autocomplete="email"
                           required
                           autofocus/>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label required">Mot de passe</label>
                    <input type="password"
                           name="_password"
                           id="password"
                           class="form-control"
                           autocomplete="current-password"
                           required/>
                </div>
            </fieldset>

            <fieldset class="form-fieldset form-actions">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                <button class="app-btn form-submit" type="submit">Connexion</button>
            </fieldset>
        </form>
    </section>
{% endblock %}
